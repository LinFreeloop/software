<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical"  
    android:padding="5dip"
    android:descendantFocusability= "afterDescendants"
    >  
      
    <RelativeLayout   
        android:id="@+id/usedbook_listitem_header"  
        android:layout_width="match_parent"  
        android:layout_height="64dp">  
          
    <ImageView
        android:id="@+id/iv_usedbook_listitem_isoffer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"/>
     <ImageView
        android:id="@+id/iv_usedbook_listitem_isfree"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_usedbook_listitem_isoffer"/>
     <TextView
        android:id="@+id/tv_usedbook_listitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="yyyy-MM-dd kk:mm:ss"/>

     <TextView
         android:id="@+id/tv_usedbook_listitem_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/iv_usedbook_listitem_isoffer"
         android:text="《Java编程思想》" 
         android:textSize="18sp"/>
     <TextView
         android:id="@+id/tv_usedbook_listitem_username"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tv_usedbook_listitem_title"
         android:layout_alignLeft="@+id/tv_usedbook_listitem_title"
         android:text="userid"
         android:textSize="18sp" />     
    </RelativeLayout>  
      
    <RelativeLayout   
        android:id="@+id/usedbook_listitem_footer"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  >  
  
        <TextView
            android:id="@+id/tv_usedbook_listitem_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正版8成新 50RMB"
            android:textSize="18sp"/>
        <LinearLayout
            android:id="@+id/layout_usedbook_listitem_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_usedbook_listitem_content"
          />
    </RelativeLayout>  
  
</LinearLayout>  