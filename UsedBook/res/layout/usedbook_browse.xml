<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/layout_usedbook_title"
    android:layout_width="fill_parent"
    android:layout_height="45dp">
    <ImageView
        android:id="@+id/iv_usedbook_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_back"/>
     <ImageView
        android:id="@+id/iv_usedbook_title_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:background="@drawable/title_more"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:text="大锤二手" />

</RelativeLayout>
    <RelativeLayout 
        android:id="@+id/layout_usedbook_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_usedbook_title">
        <EditText 
            android:id="@+id/et_usedbook_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="搜索"
            android:layout_toLeftOf="@+id/btn_usedbook_search"/>
        <Button
            android:id="@+id/btn_usedbook_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_usedbook_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_usedbook_search"
        android:layout_above="@+id/layout_usedbook_tabbar"
        android:scrollbars="none"/>

</RelativeLayout>
